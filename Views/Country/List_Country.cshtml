@model DataTable
@using System.Data

<main id="main" class="main">
    <span class="text-danger">@TempData["ErrorMessage"]</span>

    <div class="container my-5">
        <h1 class="text-center mb-4">Countries</h1>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>CountryID</th>
                    <th>CountryName</th>
                    <th>CountryCode</th>
                    <th>CreationDate</th>
                    <th>Username</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow dataRow in Model.Rows)
                {
                    <tr>
                        <td>@dataRow["CountryID"]</td>
                        <td>@dataRow["CountryName"]</td>
                        <td>@dataRow["CountryCode"]</td>
                        <td>@dataRow["CreationDate"]</td>
                        <td>@dataRow["UserName"]</td>
                        <td>
                            <a asp-controller="Country" asp-action="CountryIDDelete" asp-route-CountryID="@dataRow["CountryID"]" class="btn btn-outline-danger btn-xs">
                                <i class="bi bi-x"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
        <br />

    <a asp-controller="City" asp-action="CityList">CityList</a>

    <a asp-controller="Country" asp-action="List_Country">Country list</a>

    <a asp-controller="State" asp-action="List_State">State List</a>
</main>